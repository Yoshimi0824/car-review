<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<%= render "devise/shared/error_messages", model: f.object %>

<div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">新規会員登録</div>
      <div class="panel-body">
          <div class="form-group">
            <label class="control-label", for="user_nickname">ニックネーム</label>
            <%= f.text_field :nickname, class:"form-control", placeholder:"例) car太郎", maxlength:"40" %>
          </div>
          <div class="form-group">
            <label class="control-label", for="user_email">メールアドレス</label>
            <%= f.email_field :email, class:"form-control", placeholder:"PC・携帯どちらでも可", autofocus: true %>
          </div>
          <div class="form-group">
            <label class="control-label", for="user_password">パスワード</label>
            <%= f.password_field :password, class:"form-control", placeholder:"6文字以上の半角英数字" %>
            <p class="form-text text-muted">※英字と数字の両方を含めて設定してください</p>
          </div>
          <div class="form-group">
            <label class="control-label", for="user_password_confirmation">パスワード確認用</label>
            <%= f.password_field :password_confirmation, class:"form-control", placeholder:"同じパスワードを入力して下さい" %>
          </div>
          <div class="form-group">
            <label class="control-label", for="user_phone_number">電話番号</label>
            <%= f.text_field :phone_number, class:"form-control", placeholder:"ハイフン不要",maxlength:"11"%>
          </div>
          <div class="form-group">
            <label class="control-label">生年月日</label>
            <div class='input-birth-wrap'>
                <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
            </div>
          </div>
          <div class="btn btn-default">
            <%= f.submit "Next", class:"btn btn-primary" %>
          </div>
      </div>
    </div>
</div>
<% end %>

