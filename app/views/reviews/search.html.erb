<%= render "shared/header" %>



<div class="container">
  <div class="heading">
    <p class="heading-text">検索結果</p>
  </div>
  <div class="row">
    <%if @results.length !=0 %>
    <% @results.each do |result| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="image-box">
            <% if result.image.present? %>
              <%= image_tag result.image, class: "review-img" %>
            <% else %>
              <%= image_tag "noimage.png", class: "review-img" %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-text">
              <p><%= result.automaker.name %>  /  <%= result.model_of_car%></p>
              <p>投稿者：<%= result.user.nickname%></p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to review_path(result.id) do %>
                  <button type="button" class="btn btn-sm btn-outline-secondary">詳細</button>
                <% end %>
              </div>
              <small class="text-muted"><%= result.created_at.to_s(:datetime_jp)%></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% else %>
      該当する商品はありません
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>