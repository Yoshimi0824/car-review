<%= render "shared/header" %>

<%= form_with model: @review, url: review_path, local: true do |f| %>

<%= render "shared/error_messages", model: f.object %>

<div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">レビュー編集</div>
        <div class="panel-body">

          <%# 画像投稿%>
          <div class="form-group">
            <label for="inputFile">画像添付</label>
              <div class="custom-file">
                <%= f.file_field :image, id:"item-image" %>
              </div>
          </div>
          <%# /画像投稿%>

          <div class="form-group">
            <label class="control-label">メーカー</label>
            <%= f.collection_select(:automaker_id, Automaker.all, :id, :name, {selected: [@review.automaker_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">車種</label>
            <%= f.text_field :model_of_car, class:"form-control", placeholder:"例）プリウス" %>
          </div>
          <div class="form-group">
            <label class="control-label">グレード</label>
            <%= f.text_field :grade, class:"form-control", placeholder:"例）TX" %>
          </div>
          <div class="form-group">
            <label class="control-label">年式</label>
            <%= f.collection_select(:era_name_id, EraName.all, :id, :name, {selected: [@review.era_name_id]}, class:"form-control") %>
            <%= f.text_field :model_year, class:"form-control", placeholder:"例）30" %>
          </div>
          <div class="form-group">
            <label class="control-label">デザイン</label>
            <%= f.collection_select(:design_id, Evaluation.all, :id, :name, {selected: [@review.design_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">走行性能</label>
            <%= f.collection_select(:driving_performance_id, Evaluation.all, :id, :name, {selected: [@review.driving_performance_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">乗り心地</label>
            <%= f.collection_select(:ride_comfort_id, Evaluation.all, :id, :name, {selected: [@review.ride_comfort_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">積載性</label>
            <%= f.collection_select(:lording_id, Evaluation.all, :id, :name, {selected: [@review.lording_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">燃費</label>
            <%= f.collection_select(:fuel_economy_id, Evaluation.all, :id, :name, {selected: [@review.fuel_economy_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">価格</label>
            <%= f.collection_select(:price_id, Evaluation.all, :id, :name, {selected: [@review.price_id]}, class:"form-control") %>
          </div>
          <div class="form-group">
            <label class="control-label">良い点</label>
            <%= f.text_area :good_point, class:"form-control", placeholder:"例）〜が素晴らしい！" %>
          </div>
          <div class="form-group">
            <label class="control-label">悪い点</label>
            <%= f.text_area :bad_point, class:"form-control", placeholder:"例）〜がいまいち…" %>
          </div>


          <div class="btn btn-default">
            <%= f.submit "変更する", class:"btn btn-primary" %>
            <%=link_to 'もどる', review_path(@review.id), class:"btn btn-primary" %>
          </div>
      </div>
    </div>
</div>
<% end %>